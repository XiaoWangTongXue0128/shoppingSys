<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--注册-->
    <servlet>
        <servlet-name>registMapping</servlet-name>
        <servlet-class>controller.RegistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registMapping</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>
    <!--登录-->
    <servlet>
        <servlet-name>loginMapping</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginMapping</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--查询-->
    <servlet>
        <servlet-name>selectMapping</servlet-name>
        <servlet-class>controller.SelectController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectMapping</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>
    <!--查询种类-->
    <servlet>
        <servlet-name>showKindMapping</servlet-name>
        <servlet-class>controller.ShowKindController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showKindMapping</servlet-name>
        <url-pattern>/showKind</url-pattern>
    </servlet-mapping>
    <!--购物-->
    <servlet>
        <servlet-name>shoppingMapping</servlet-name>
        <servlet-class>controller.ShoppingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingMapping</servlet-name>
        <url-pattern>/shopping</url-pattern>
    </servlet-mapping>
    <!--保存购物记录-->
    <servlet>
        <servlet-name>SaveMapping</servlet-name>
        <servlet-class>controller.SaveController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveMapping</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <!--结账-->
    <servlet>
        <servlet-name>CheckoutMapping</servlet-name>
        <servlet-class>controller.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutMapping</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
</web-app>